<Window x:Name="window" x:Class="FoodRecipeEntry.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoodRecipeEntry"
        mc:Ignorable="d"
        Title="MainWindow" Height="540" Width="960">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" Margin="10,10,10,10">
            <Image x:Name="mainBG" Margin="9,9,9,9" Source="/Images/title1.png" Stretch="Fill"/>
        </Border>
        <Button Content="Click here to continue..." HorizontalAlignment="Center" Margin="0,407,0,0" VerticalAlignment="Top" Height="70" Width="424" Click="Button_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FFFB8383" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
            <Button.BorderBrush>
                <ImageBrush TileMode="None" Stretch="UniformToFill"/>
            </Button.BorderBrush>
        </Button>

    </Grid>
</Window>
